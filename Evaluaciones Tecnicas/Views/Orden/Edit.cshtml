@model Entities.Orden

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<link href="~/Content/modern-business.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    <div class="d-flex flex-column">
        <div class="container-fluid">
            <div class="card shadow mb-4">

                <div class=" card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Editar la Respuesta <i> "@Html.DisplayFor(model => model.LaRespuesta)"</i></h6>

                </div>

                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)






                    <h5 class="text-justify">Respuesta</h5>
                    @Html.EditorFor(model => model.LaRespuesta, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LaRespuesta, "", new { @class = "text-danger" })

                    <h5 class="text-justify">Numero de Orden</h5>
                    @Html.EditorFor(model => model.pregunta.Id, new { htmlAttributes = new { @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.pregunta.Id, "", new { @class = "text-danger" })

                <h5 class="text-justify">Numero de Pregunta</h5>
                    @Html.EditorFor(model => model.pregunta.Id, new { htmlAttributes = new { @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.pregunta.Id, "", new { @class = "text-danger" })
                </div>



                <input type="button" class="btn btn-outline-primary " style="float:left" value="Volver" onclick="location.href='@Url.Action("Index", "Orden",new { id = Model.pregunta.Id })'" />
                <br />
                <input type="submit" value="Guardar" class="btn btn-outline-info" />
            </div>
        </div>
    </div>
}
