@model GreenElectric.Entities.Orden

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
    <link href="~/Content/modern-business.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Editar la Respuesta <i> "@Html.DisplayFor(model => model.LaRespuesta)"</i></h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">

        <div class="col-md-10">
            <h5 class="text-justify">Respuesta</h5>
            @Html.EditorFor(model => model.LaRespuesta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LaRespuesta, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-10">
            <h5 class="text-justify">Numero de Orden</h5>
            @Html.DropDownListFor(model => model.NumeroOrden, (IEnumerable<SelectListItem>)ViewBag.Opciones, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NumeroOrden, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-10">
        <h5 class="text-justify">Numero de Pregunta</h5>

        @Html.EditorFor(model => model.pregunta.Id, new { htmlAttributes = new { @readonly = "readonly" } })
        @Html.ValidationMessageFor(model => model.pregunta.Id, "", new { @class = "text-danger" })
    
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <br />
            <input type="button" class="BotonVerde " style="float:right" value="Volver" onclick="location.href='@Url.Action("Index", "Orden",new { id = Model.pregunta.Id })'" />
            <input type="submit" value="Actualizar" class="BotonVerde" />
        </div>
    </div>

</div>
}

