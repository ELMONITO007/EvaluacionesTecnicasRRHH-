@model Entities.Orden

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

    <link href="~/Content/modern-business.css" rel="stylesheet" />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Crear una respuesta para la pregunta <i>"@Html.DisplayFor(model => model.pregunta.LaPregunta)"</i></h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">


        <div class="col-md-10">
            <h5 class="text-justify">Respuesta</h5>
            @Html.EditorFor(model => model.LaRespuesta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LaRespuesta, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group ">

        <div class="col-md-10">
            <h5 class="text-justify">Numero de Orden</h5>
            @Html.DropDownListFor(model => model.NumeroOrden, (IEnumerable<SelectListItem>)ViewBag.Opciones, new { htmlAttributes = new { @class = "dropdown-menu" } })
            @Html.ValidationMessageFor(model => model.NumeroOrden, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.HiddenFor(model => model.pregunta.Id)
    @*<div class="form-group">

        <div class="col-md-10">
            <h5 class="text-justify">Numero de Pregunta</h5>
            @Html.EditorFor(model => model.pregunta.Id, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.pregunta.Id, "", new { @class = "text-danger" })
        </div>
    </div>*@
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" class="BotonVerde " style="float:right" value="Volver" onclick="location.href='@Url.Action("Index", "Orden",new { id = Model.pregunta.Id })'" />
            <input type="submit" value="Crear" class="BotonVerde" />
        </div>
    </div>
</div>
}

