@model Entities.Orden

@{
    ViewBag.Title = "Index";
    string layout = "~/Views/Shared/" + Session["Layout"] + ".cshtml";
    Layout = layout;
}

<link href="~/Content/modern-business.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="d-flex flex-column">
        <div class="container-fluid">
            <div class="card shadow mb-4" style="min-width: 850px">
                <div class=" card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Crear una Gerencia</h6>



                </div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                    <h5 class="text-justify">Respuesta</h5>
                    @Html.EditorFor(model => model.LaRespuesta, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LaRespuesta, "", new { @class = "text-danger" })


                    <h5 class="text-justify">Numero de Orden</h5>
                    @Html.DropDownListFor(model => model.NumeroOrden, (IEnumerable<SelectListItem>)ViewBag.Opciones, new { htmlAttributes = new { @class = "dropdown-menu" } })
                    @Html.ValidationMessageFor(model => model.NumeroOrden, "", new { @class = "text-danger" })


                    @Html.HiddenFor(model => model.pregunta.Id)


                </div>


                <input type="button" class="btn btn-outline-primary " style="float:right" value="Volver" onclick="location.href='@Url.Action("Index", "Orden",new { id = Model.pregunta.Id })'" />

                <br />

                <input type="submit" value="Crear" class="btn btn-outline-info" />

            </div>
        </div>
    </div>
}
