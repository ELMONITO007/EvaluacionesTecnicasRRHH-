@model GreenElectric.Entities.TipoPregunta

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

    <link href="~/Content/modern-business.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Editar el tipo de pregunta @Html.DisplayFor(model => model.TipoDePregunta)</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

    <div class="form-group">
    
        <div class="col-md-10">
            <h5 class="text-justify">Tipo de Pregunta</h5>
            @Html.EditorFor(model => model.TipoDePregunta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TipoDePregunta, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <input type="button" class="BotonVerde " style="float:right" value="Volver" onclick="location.href='@Url.Action("Index", "TipoPregunta")'" />
                <input type="submit" value="Actualizar" class="BotonVerde" />
            </div>
        </div>
    </div>
}


