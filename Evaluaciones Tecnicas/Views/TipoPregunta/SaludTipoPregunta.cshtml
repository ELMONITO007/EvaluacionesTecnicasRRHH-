@model GreenElectric.Entities.SaludCategoria

@{
    ViewBag.Title = "SaludTipoPregunta";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<link href="~/Content/modern-business.css" rel="stylesheet" />

<div>
    <h4>Salud de la Categoria   <i> "@Html.DisplayFor(model => model.Pregunta.categoria.LaCategoria)"</i></h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.SaludCategtoria)
            <i style="text-decoration:none">&nbsp</i>

            @if (Model.TieneMasDe20Preguntas == true)
            {
                <img src="~/img/UnCheck.png" width="50" height="50" />
            }
            @if (Model.TieneMasDe20Preguntas == false)
            {
                <img src="~/img/check.png" width="50" height="50" />
            }
        </dt>
        <dt style="color:black"> Analisis de la pregunta</dt>
        &nbsp
        &nbsp
        <dt>
            1. @Html.DisplayNameFor(model => model.TieneMasDe20PreguntasConBuenaSalud)
            &nbsp
            @if (Model.TieneMasDe20PreguntasConBuenaSalud == true)
            {
                <img src="~/img/UnCheck.png" width="50" height="50" />
            }
            @if (Model.TieneMasDe20PreguntasConBuenaSalud == false)
            {
                <img src="~/img/check.png" width="50" height="50" />
            }


        </dt>

        <dt>
            2.   @Html.DisplayNameFor(model => model.TieneMasDe20Preguntas)
            &nbsp


            @if (Model.TieneMasDe20Preguntas == true)
            {
                <img src="~/img/UnCheck.png" width="50" height="50" />
            }
            @if (Model.TieneMasDe20Preguntas == false)
            {
                <img src="~/img/check.png" width="50" height="50" />
            }
        </dt>
        <dt>
            3.   @Html.DisplayNameFor(model => model.CantidadDePreguntas)
            &nbsp


          
        </dt>

    </dl>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" class="BotonVerde " style="float:left" value="Volver" onclick="location.href='@Url.Action("Index", "PreguntaCategoria")'" />

        </div>
    </div>
</div>

