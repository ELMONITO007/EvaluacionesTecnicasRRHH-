@model GreenElectric.Entities.Pregunta

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<link href="~/Content/css/sb-admin-2.css" rel="stylesheet" />

<div class="form-horizontal">

    <h2>Crear una Pregunta</h2>

    <hr />





    <form method="post" enctype="multipart/form-data">
        <div class="col-md-10">

        </div>
        <div class="col-md-10">
            <h5>Pregunta</h5>
            @Html.EditorFor(model => model.LaPregunta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LaPregunta, "", new { @class = "text-danger" })
            <br />

            <h5>Ubicacion Imagen</h5>
            <input type="file" name="file" accept="image/*" />
            <br />
            <br />

            @Html.DropDownList("LaCategoria", (SelectList)ViewBag.categoriaLista as SelectList, new { @class = "form-control" })
            @*@Html.ValidationMessageFor(model => model.categoria.Id, "", new { @class = "text-danger" })*@

            <br />
            @Html.DropDownList("TipoPregunta", (SelectList)ViewBag.TipoDePreguntaLista, new { @class = "form-control" })
            @*@Html.ValidationMessageFor(model => model.tipoPregunta.Id, "", new { @class = "text-danger" })*@

            <br />

            @Html.DropDownList("Nivel", (SelectList)ViewBag.ListaNivel, new { @class = "form-control" })
            @*@Html.ValidationMessageFor(model => model.nivel.Id, "", new { @class = "text-danger" })*@
            <br />
            <br />
            <button type="submit" , class="AzulButton">Crear</button>
            <input type="button" class="AzulButton " style="float:right" value="Volver" onclick="location.href='@Url.Action("Index", "PreguntaCategoria")'" />


        </div>
    </form>





</div>