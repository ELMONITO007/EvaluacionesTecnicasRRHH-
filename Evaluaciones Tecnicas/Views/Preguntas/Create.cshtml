@model Entities.Pregunta

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<link href="~/Content/modern-business.css" rel="stylesheet" />

@using (Html.BeginForm("create", "preguntas", FormMethod.Post, new
{
    enctype = "multipart/form-data"
}))
{
    @Html.AntiForgeryToken()

    <div class="d-flex flex-column">
        <div class="container-fluid">
            <div class="card shadow mb-4" style="min-width:850px">
                <div class=" card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Crear una pregunta</h6>



                </div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                    <h5 class="text-justify">Pregunta</h5>
                    @Html.EditorFor(model => model.LaPregunta, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LaPregunta, "", new { @class = "text-danger" })
                    <br />
                    <h5 class="text-justify">Ubicacion Imagen</h5>

                    @*<input type="file" name="file" accept="image/*" />*@

                    <input type="file" name="File" class="btn btn-outline-primary" /> <br />

                    <br />

                    <h5 class="text-justify">Categoria</h5>

                    @Html.DropDownListFor(model => model.categoria.Id, (SelectList)ViewBag.categoriaLista as SelectList, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.categoria.Id, "", new { @class = "text-danger" })
                    <br />

                    <h5 class="text-justify">Tipo de pregunta</h5>

                    @Html.DropDownListFor(model => model.tipoPregunta.Id, (SelectList)ViewBag.TipoDePreguntaLista as SelectList, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.tipoPregunta.Id, "", new { @class = "text-danger" })
                    <br />

                    <h5 class="text-justify">Nivel</h5>

                    @Html.DropDownListFor(model => model.nivel.Id, (SelectList)ViewBag.ListaNivel as SelectList, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.nivel.Id, "", new { @class = "text-danger" })
                    <br />


                </div>


                <input type="button" class="btn btn-outline-primary " style="float:right" value="Volver" onclick="location.href='@Url.Action("Index", "preguntacategoria")'" />

                <br />

                <input type="submit" value="Crear" class="btn btn-outline-info" />

            </div>
        </div>
    </div>
}


@section scripts
{
}