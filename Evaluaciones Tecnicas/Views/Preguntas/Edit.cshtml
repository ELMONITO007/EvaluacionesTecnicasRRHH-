@model GreenElectric.Entities.Pregunta

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}



    <link href="~/Content/modern-business.css" rel="stylesheet" />



<form method="post" enctype="multipart/form-data">




    <div class="col-md-12">
        <h4>Editar la pregunta numero  @Html.DisplayFor(model => model.Id)</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">

            <div>
                <h5>Pregunta</h5>
                @Html.EditorFor(model => model.LaPregunta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LaPregunta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            <br />
            <h4>La imagen es:  @Html.Label(Model.Imagen)</h4>
            <div>
                <h5>Ingresa la nueva imagen</h5>
                <br />
                @Html.ValidationMessageFor(model => model.Imagen, "", new { @class = "text-danger" })
                <input type="file" name="file" accept="image/*" />

            </div>
        </div>
        <div>
            <br />
            <br />
            <h4 style="font-style:italic">El nivel actual de la pregunta es:  @Html.Label(Model.nivel.ElNivel)</h4>
            <div>
                <h5>Ingresa el nuevo nivel</h5>
          
                @Html.DropDownList("Nivel", (SelectList)ViewBag.ListaNivel, new { @class = "form-control" }) <h6 style="color:red">Si el nivel es el mismo seleccionarlo en la lista de todos modos</h6>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <br />
                    <input type="submit" value="Guardar" class="AzulButton" />
                    <input type="button" class="AzulButton " style="float:right" value="Volver" onclick="location.href='@Url.Action("Index", "PreguntaCategoria")'" />

                </div>
            </div>
        </div>
        </div>

</form>

