@model IEnumerable<Entities.Roles>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

    <link href="~/Content/modern-business.css" rel="stylesheet" />
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <tr >
                <th>
                    <h5>  @Html.DisplayNameFor(model => model.name)</h5>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = int.Parse(item.id) }) |
                        @Html.ActionLink("Detalles", "Details", new { id = int.Parse(item.id) }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = int.Parse(item.id) }) |
                        @Html.ActionLink("Ver Usuarios", "Roles", "UsuarioRoles", new { id = item.id }, null)
                    </td>

                    
                </tr>
            }

        </table>
        <div>
            <p>
                <input type="button" class="BotonVerde " style="float:left" value="Crear" onclick="location.href='@Url.Action("Create", "Roles")'" />
            </p>
        </div>
    </div>
