@model IEnumerable<Evaluaciones.Models.PreguntaCategoriaModels>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<link href="~/Content/modern-business.css" rel="stylesheet" />

<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">


        <!-- Begin Page Content -->
        <div class="container-fluid">


            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Lista de Preguntas</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">

                            <div class="col-sm-12">
                                <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 103px;">Pregunta</th>
                                            <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 162px;">Acciones</th>
                                        </tr>
                                    </thead>

                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            <tr role="row" class="odd">
                                                <td class="sorting_1">
                                                    @Html.DisplayFor(modelItem => item.Pregunta)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Detalles Pregunta", "Details", "Preguntas", new { id = item.ID_Pregunta }, null)|
                                                    @Html.ActionLink("Eliminar Pregunta", "Delete", "Preguntas", new { id = item.ID_Pregunta }, null)|
                                                    @Html.ActionLink("Ver Categorias", "Categoria", new { id = item.ID_Pregunta })|
                                                    @Html.ActionLink("Ver Respuestas", "Respuesta", "Respuestas", new { Id_Pregunta = item.ID_Pregunta }, null)|

                                                    @if (item.TipoPregunta == "MultipleChoice")
                                                    {
                                                        @Html.ActionLink("Salud", "SaludMultipleChoice", "SaludPregunta", new { id = item.ID_Pregunta }, null)
                                                    }
                                                    @if (item.TipoPregunta == "Ordenado")
                                                    {
                                                        @Html.ActionLink("Salud", "SaludOrdenado", "SaludPregunta", new { id = item.ID_Pregunta }, null)
                                                    }
                                                    @if (item.TipoPregunta == "MultipleChoiceCompuesto")
                                                    {
                                                        @Html.ActionLink("Salud", "SaludMultipleChoiceCompuesto", "SaludPregunta", new { id = item.ID_Pregunta }, null)
                                                    }

                                                </td>


                                            </tr>
                                        }



                                    </tbody>
                                </table>
                                <input type="button" class="btn btn-outline-primary " style="float:left" value="Crear" onclick="location.href='@Url.Action("Create", "Preguntas")'" />
                            </div>
                         
                        </div>
                      
                    </div>
                  
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->


</div>