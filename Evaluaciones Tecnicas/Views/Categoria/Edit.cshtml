@model Entities.Categoria

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<link href="~/Content/modern-business.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    
<div class="d-flex flex-column">
    <div class="container-fluid">
        <div class="card shadow mb-4 " style="min-width:250%">

            <div class=" card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Editar el Rol @Html.DisplayFor(model => model.LaCategoria)</h6>

            </div>

            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)





                <h5 class="text-justify">Categoria</h5>
                @Html.EditorFor(model => model.LaCategoria, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LaCategoria, "", new { @class = "text-danger" })
                <br />


                <h5 class="text-justify">Descripción</h5>
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })

            </div>



            <input type="button" class="btn btn-outline-primary " style="float:left" value="Volver" onclick="location.href='@Url.Action("Index", "Categoria")'" />
            <br />
            <input type="submit" value="Guardar" class="btn btn-outline-info" />
        </div>
    </div>
    </div>
    }
