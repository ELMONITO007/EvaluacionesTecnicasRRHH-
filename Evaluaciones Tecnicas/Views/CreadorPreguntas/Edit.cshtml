@model Entities.Pregunta

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutCreador.cshtml";
}



    <link href="~/Content/modern-business.css" rel="stylesheet" />



   




  

        @using (Html.BeginForm("create", "preguntas", FormMethod.Post, new
        {
            enctype = "multipart/form-data"
        }))
        {
            @Html.AntiForgeryToken()

            <div class="d-flex flex-column">
                <div class="container-fluid">
                    <div class="card shadow mb-4" style="min-width:850px">
                        <div class=" card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">>Editar la pregunta   @Html.DisplayFor(model => model.LaPregunta)</h6>



                        </div>
                        <div class="card-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Id)


                            <h5 class="text-justify">Pregunta</h5>

                            @Html.EditorFor(model => model.LaPregunta, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.LaPregunta, "", new { @class = "text-danger" })
                            <br />
                           
                            <h5 class="text-justify">
                                La imagen es:  @Html.Label(Model.Imagen)
                            </h5>
                         
                            <h5 class="text-justify"> <h5>Ingresa la nueva imagen</h5> </h5>

                            <input type="file" name="File" class="btn btn-outline-primary" /> <br />

                            <br />



                            <h5 class="text-justify">El nivel actual de la pregunta es:  @Html.Label(Model.nivel.ElNivel)</h5>

                            <h5 class="text-justify">
                                Ingresa el nuevo nivel
                            </h5>

                            @Html.DropDownListFor(model => model.nivel.Id, (SelectList)ViewBag.ListaNivel as SelectList, new { @class = "form-control" })<h6 style="color:red">Si el nivel es el mismo seleccionarlo en la lista de todos modos</h6>
                            @Html.ValidationMessageFor(model => model.nivel.Id, "", new { @class = "text-danger" })
                            <br />


                        </div>


                        <input type="button" class="btn btn-outline-primary " style="float:right" value="Volver" onclick="location.href='@Url.Action("Index", "preguntacategoria")'" />

                        <br />

                        <input type="submit" value="Actualizar" class="btn btn-outline-info" />

                    </div>
                </div>
            </div>
        }


