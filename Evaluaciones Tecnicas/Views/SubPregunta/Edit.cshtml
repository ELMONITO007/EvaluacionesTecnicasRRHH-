@model Entities.SubPregunta

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

    <link href="~/Content/modern-business.css" rel="stylesheet" />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Editar la pregunta  @Html.DisplayFor(model => model.pregunta.LaPregunta)</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.pregunta.Id)

    <div class="form-group">
        
        <div>
            <h5>Pregunta</h5>
            @Html.EditorFor(model => model.pregunta.LaPregunta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.pregunta.LaPregunta, "", new { @class = "text-danger" })
        </div>
    </div>
    <label hidden>
   @Html.Label("Id_Pregunta",Model.Id.ToString())
           </label>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <br />
            <input type="submit" value="Guardar" class="BotonVerde" />
            <input type="button" class="BotonVerde " style="float:right" value="Volver" onclick="location.href='@Url.Action("Index", "MultipleChoiceCompuesto",new { id=Model.Id})'" />

        </div>
    </div>
</div>
}

