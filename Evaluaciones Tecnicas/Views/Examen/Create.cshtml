@model Entities.Examen.Examen

@{
    ViewBag.Title = "Create";
    string ly = (string)Session["Layout"];
    Layout = "~/Views/Shared/" + ly + ".cshtml";
}

<link href="~/Content/modern-business.css" rel="stylesheet" />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="d-flex flex-column">
        <div class="container-fluid">
            <div class="card shadow mb-4">
                <div class=" card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Crear un Sector</h6>



                </div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.HiddenFor(model => model.usuario.Id)

                    <h5 class="text-justify">Categoria</h5>
                    @Html.DropDownListFor(model => model.Categoria.LaCategoria, (IEnumerable<SelectListItem>)ViewBag.ListaCategoria, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Categoria.LaCategoria, "", new { @class = "text-danger" })
                    <br />

                    <h5 class="text-justify">Cantidad Preguntas</h5>
                    @Html.EditorFor(model => model.cantidadPreguntas, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cantidadPreguntas, "", new { @class = "text-danger" })

                </div>


                <input type="button" class="btn btn-outline-primary " style="float:right" value="Volver" onclick="location.href='@Url.Action("Index", "UsuarioExamen")'" />

                <br />

                <input type="submit" value="Crear" class="btn btn-outline-info" />

            </div>
        </div>
    </div>
}

@section scripts
{
}