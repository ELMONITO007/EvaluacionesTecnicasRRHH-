@model GreenElectric.Entities.MultipleChoiceCompuesto

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

    <link href="~/Content/modern-business.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Editar la Respuesta <i> "@Html.DisplayFor(model => model.LaRespuesta)"</i></h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
      
        <div class="col-md-10">
            <h3>Respuesta</h3>
            @Html.EditorFor(model => model.LaRespuesta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LaRespuesta, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.Hidden("id_Pregunta", Model.Pregunta.Id)
   

    <div class="form-group">
        
        <div class="col-md-10">
            <h3>¿Respuesta Correcta?</h3>
            <div class="checkbox">
                @Html.EditorFor(model => model.Correcta)
                @Html.ValidationMessageFor(model => model.Correcta, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" class="BotonVerde " style="float:right" value="Volver" onclick="location.href='@Url.Action("Index", "MultipleChoiceCompuesto",new { id=Model.id_SubPregunta})'" />
            <input type="submit" value="Actualizar" class="BotonVerde" />
        </div>
    </div>
</div>
}


