@model IEnumerable<Entities.PDF>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<link href="~/Content/modern-business.css" rel="stylesheet" />

<div class="table-responsive">
    <table class="table table-bordered table-hover">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.unUsuario.usuarios.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.unUsuario.usuarios.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.unUsuario.usuarios.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.path)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.unUsuario.usuarios.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.unUsuario.usuarios.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.unUsuario.usuarios.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.path)
        </td>
        <td>
            <input type="submit" class="BotonVerde " style="float:left" value="Crear" onclick="location.href='@Url.Action("Abrir", "PDF", new { id =item.unUsuario.usuarios.Email })'" />
        </td>
    </tr>
        }

    </table>
 </div>